{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "qbt",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "open": true
      },
      "window": {
        "show": true
      }
    },
    "windows": [
      {
        "center": true,
        "title": "qBittorrent",
        "width": 1200,
        "height": 700,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self'"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.gmail.karoyqiu.qbt",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
